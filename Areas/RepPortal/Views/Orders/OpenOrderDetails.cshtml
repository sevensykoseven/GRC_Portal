                            <a class="dropdown-item download" href="#"><i class="fas fa-download fa-sm mr-2"></i> Export List</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-body">
                        <div class="form-group row">
                            <label class="col-xl-3 col-lg-3 col-form-label">Customer</label>
                            <div class="col-lg-9 col-xl-6">
                                <input class="form-control disabled" type="text" placeholder="@Model.OrderDetails.GRC_RepGroupOpenOrders_Name" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-xl-3 col-lg-3 col-form-label">PO</label>
                            <div class="col-lg-9 col-xl-6">
                                <input class="form-control disabled" type="text" placeholder="@Model.OrderDetails.GRC_RepGroupOpenOrders_PONum" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-xl-3 col-lg-3 col-form-label">Order Amount</label>
                            <div class="col-lg-9 col-xl-6">
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-dollar-sign text-gray-500"></i></span></div>
                                    <input class="form-control disabled" type="text" placeholder="@Model.OrderDetails.GRC_RepGroupOpenOrders_OrderAmt" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-xl-3 col-lg-3 col-form-label">Order Date</label>
                            <div class="col-lg-9 col-xl-6">
                                <input class="form-control disabled" type="text" placeholder="@Model.OrderDetails.GRC_RepGroupOpenOrders_OrderDate" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-xl-3 col-lg-3 col-form-label">Ship By Date</label>
                            <div class="col-lg-9 col-xl-6">
                                <input class="form-control disabled" type="text" placeholder="@Model.OrderDetails.GRC_RepGroupOpenOrders_NeedByDate" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-xl-3 col-lg-3 col-form-label">Rep Group Name</label>
                            <div class="col-lg-9 col-xl-6">
                                <input class="form-control disabled" type="text" placeholder="@Model.OrderDetails.GRC_RepGroupOpenOrders_RepGroupName" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-xl-3 col-lg-3 col-form-label">Region Manager</label>
                            <div class="col-lg-9 col-xl-6">
                                <input class="form-control disabled" type="text" placeholder="@Model.OrderDetails.GRC_RepGroupOpenOrders_RegionManager" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-xl-3 col-lg-3 col-form-label">Account Manager</label>
                            <div class="col-lg-9 col-xl-6">
                                <input class="form-control disabled" type="text" placeholder="@Model.OrderDetails.GRC_RepGroupOpenOrders_AccountManager" readonly>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-9 mb-4">

            @*<div class="card shadow mb-4">
                    <a href="" class="download" class="text-decoration-none" style="text-decoration:none;">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <h5 class=" font-weight-bold text-uppercase mb-1">Download XLSX</h5>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-download fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="card shadow mb-4">
                    <div class="card-header py-3 text-uppercase">
                        actions
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            <a class="list-group-item list-group-item-action" href="" role="tab">
                                <span class=""><i class="fas fa-download mr-2"></i></span>
                                <span class="">XLSX</span>
                            </a>
                            <a class="list-group-item list-group-item-action " href="" role="tab">
                                <span class=""><i class="fas fa-file-download mr-2"></i></span>
                                <span class="">Report</span>
                            </a>
                            <a class="list-group-item list-group-item-action " href="" role="tab">
                                <span class=""><i class="fas fa-print mr-2"></i></span>
                                <span class="">Print</span>
                            </a>
                        </div>
                    </div>
                </div>*@

            <div class="card shadow bg-warning @MyHelpers.ShowNotShow((Convert.ToBoolean(Model.OrderDetails.GRC_RepGroupOpenOrders_CreditHold) ? true : false)) mb-4">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <h4 class=" font-weight-bold text-uppercase mb-1 text-white">On Hold</h4>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation fa-2x text-white"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card shadow bg-warning @MyHelpers.ShowNotShow((Convert.ToBoolean(Model.OrderDetails.GRC_RepGroupOpenOrders_OrderHeld) ? true : false)) mb-4">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <h4 class=" font-weight-bold text-uppercase mb-1 text-white">Order Held</h4>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation fa-2x text-white"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Order Acknowledgment</h6>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <a href="" class="print">
                            <img class="img-fluid px-3 px-sm-4 mt-3 mb-4" style="width: 25rem;" src="~/Content/img/undraw_Files_sent_re_kv00.svg" alt="">
                        </a>
                    </div>
                    <p>Need a copy of your original order acknowledgement?  Your request will be queued and sent to @Current.User.Email.</p>

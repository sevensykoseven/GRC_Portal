            </div>

        </div>

    </div>


    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-gray-600">Lines<small class="text-muted ml-2">(click line for details)</small></h6>
            <div class="dropdown no-arrow">
                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                    <div class="dropdown-header">Reports:</div>
                    <a class="dropdown-item download" href="#"><i class="fas fa-download fa-sm mr-2"></i> Download xlsx</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if (Model.LineDetails != null && Model.LineDetails.value.Count > 0)
                {
                    <table id="OpenOrders" class="table table-striped table-hover" width="100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Line #</th>
                                <th>Part Num</th>
                                <th>Description</th>
                                <th>Qty</th>
                                <th>Unit Price</th>
                                <th>Discount</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LineDetails.value)
                            {
                                <tr data-id="@item.OrderDtl_OrderLine" data-comment="@(item.OrderDtl_OrderComment.ToString().Replace($"\r", $"<br />"))" class="pt-clickable click">
                                    <td>
                                        <i class="fas fa-info-circle fa-sm fa-fw mr-2 text-info" title="click line for details" data-toggle="tooltip" data-placement="top"></i>
                                    </td>
                                    <td>
                                        @item.OrderDtl_OrderLine
                                    </td>
                                    <td>
                                        @item.OrderDtl_PartNum
                                    </td>
                                    <td>
                                        @item.OrderDtl_LineDesc
                                    </td>
                                    <td>
                                        @Convert.ToDouble(item.OrderDtl_SellingQuantity)
                                    </td>
                                    <td>
                                        @Convert.ToDouble(item.OrderDtl_DocUnitPrice).ToString("C")
                                    </td>
                                    <td>
                                        @Convert.ToDouble(item.OrderDtl_Discount).ToString("C")
                                    </td>
                                    <td>
                                        @Convert.ToDouble(item.Calculated_LineTotal).ToString("C")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Order has no lines.</p>
                }
            </div>
        </div>
    </div>
}
<div class="modal fade" id="CommentModal" tabindex="-1" role="dialog" aria-labelledby="Comment" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="commentModelLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="lineDetails"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="OrderAck" tabindex="-1" role="dialog" aria-labelledby="OrderAck" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="OrderAckModelLabel"><i class="fa fa-info-circle fa-fw mr-2"></i>Order Acknowledgement Request</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Your request for a copy of your order acknowledgement has been queued. You can expect an email sent to @Current.User.Email shortly.</p>
                <p>If no order acknowledgement is received, please check our junk or spam folders. If not found, please reach out to your account manager, @Model.OrderDetails.GRC_RepGroupOpenOrders_AccountManager.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js"></script>
    @*@Scripts.Render("~/datatables")*@

    <script type="text/javascript">
        $(document).ready(function () {
            var token = $('input[name="__RequestVerificationToken"]').val();

            $('#OpenOrders').DataTable({
                "pageLength": 50,
                "info": true,
                "paging": true,
                "order": [[1, "asc"]],
                columnDefs: [
                    { orderable: false, targets: 0 },
                    { orderable: true, className: 'reorder', targets: '_all' }
                ]
            });

            $(".click").bind("click", function (e) {
                $('#lineDetails').html($(this).data("comment").replace("\r", "<br>"));
                $('#commentModelLabel').text("Line " + $(this).data("id") + " Details");
                $('#CommentModal').modal('show');
             });

            $(".download").bind("click", function (e) {
                ShowWorkingImage();
                e.preventDefault(); @* prevent default click behavior *@
                window.location = "/RepPortal/Orders/GetOpenOrderDetails_Excel/@(Cryptography.EncryptAndEncode(Model.OrderDetails.GRC_RepGroupOpenOrders_Ordernum.ToString(),GlobalVariables.InternalKey))";
                HideWorkingImage();
            });

            $(".print").bind("click", function (e) {
                ShowWorkingImage();
                e.preventDefault(); @* prevent default click behavior *@
                $.post("@Url.Action("SendOrderAck")", { __RequestVerificationToken: token, id: '@(Cryptography.EncryptAndEncode(Model.OrderDetails.GRC_RepGroupOpenOrders_Ordernum.ToString(), GlobalVariables.InternalKey))' }).done(function (data) {
                    if (data == "OK") {
                        HideWorkingImage();
                       $('#OrderAck').modal('show');
                    }
                }).fail(function (request, status, error) { });
            });

        });
    </script>
}

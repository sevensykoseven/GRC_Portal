@using System.Web.Optimization
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en" class="fullscreen-bg">
<head>
    @*-- Global site tag (gtag.js) - Google Analytics-- *@
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-175608108-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
<a href="~/Views/Shared/_LayoutExternal.cshtml">~/Views/Shared/_LayoutExternal.cshtml</a>
        gtag('js', new Date());

        gtag('config', 'UA-175608108-1');
    </script>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="robots" content="nofollow" />
    <meta name="robots" content="noindex" />
    <title>@ViewBag.Title | Grand Rapids Chair Co</title>

    @RenderSection("MetaData", false)

    @*-- ICONS --*@
    <link rel="apple-touch-icon" sizes="76x76" href="~/favicon.ico">
    <link rel="icon" type="image/png" sizes="96x96" href="~/favicon.ico">
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @Styles.Render("~/external/styles")

    @*-- FONTS --*@
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    @RenderSection("Styles", false)

</head>
<body style="background-image: url(/Content/media/misc/bg_2.jpg)" class="">

    @*-- PAGE --*@
    @RenderBody()

    @*-- ITEM --*@
    <footer class="PT-footer-fixed-bottom d-flex justify-content-between" >
        <div>
            &copy; @DateTime.Now.Year.ToString() Grand Rapids Chair Co.
        </div>
        <div class="mr-3">
            <a href="https://grandrapidschair.com//terms-and-conditions/" target="_blank" class="text-decoration-none">Terms of Use</a>
        </div>
    </footer>

    @Scripts.Render("~/external/scripts")

    @RenderSection("Scripts", false)
</body>
</html>
